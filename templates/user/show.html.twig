{% extends 'base.html.twig' %}

{% block title %}<title>Alpha Fitness | DÃ©tails Utilisateur</title>{% endblock %}

{% block innerblock %}
<div class="inner-block">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <a href="{{ path('user_index') }}">Retour</a>
                        <h1>Utilisateur</h1>
                        <table class="table">
                            <tbody>
                            <tr>
                                <th>Nom</th>
                                <td>{{ user.username}}</td>
                            </tr>
                            <tr>
                                <th>Mot de passe</th>
                                <td>{{ user.password }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ user.email }}</td>
                            </tr>
                            <tr>
                                <th>l'images de l'utilisateur</th>
                                <td class="pic" ><img style="height: 200px; width: 200px;" src="/imagez/{{ user.imageuser }}" alt></td>
                            </tr>
                            <tr>
                                <th>Role</th>
                                <td>{{ user.role }}</td>
                            </tr>
                            <tr>
                                <th>Date de naissance</th>
                                <td>{{ user.datedenaissance ? user.datedenaissance|date('Y-m-d') : '' }}</td>
                            </tr>
                            <tr>
                                <th>L'image de la carte</th>
                                {% for carte in carte %}
                                    {% if carte.username==user.username %}
                                        <td class="pic" ><img style="height: 200px; width: 200px;" src="/imagez/{{ carte.imagecard }} " alt>{{ carte.typeofcard }}</td>
                                    {% else %}
                                        <td>{{ 'pas de carte' }}</td>
                                    {% endif %}
                                {% endfor %}
                            </tr>

                            </tbody>
                        </table>



                        <a href="{{ path('user_edit', {'iduser': user.iduser}) }}">Modifier</a>

                        {{ include('user/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
