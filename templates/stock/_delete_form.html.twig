<form method="post" action="{{ path('stock_delete', {'id': stock.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cet produit ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ stock.id) }}">
    <button class="btn btn-danger" ><i class="fa fa-trash-o"> Supprimer</i></button>
</form>
