{% extends 'base.html.twig' %}

{% block title %}<title>Alpha Fitness | Stock</title>{% endblock %}

{% block innerblock %}
    <div class="inner-block">
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Produits en stock</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                <tr>
                                    <th>Produit</th>
                                    <th>Date d'ajout</th>
                                    <th>Quantité</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for stock in stocks %}
                                    <tr>
                                        <td>{{ stock.idproduit.nom }}</td>
                                        <td>{{ stock.dateentree ? stock.dateentree|date('Y-m-d') : '' }}</td>
                                        <td>{{ stock.quantite }}</td>
                                        <td>
                                            <a href="{{ path('stock_show', {'id': stock.id}) }}"><i class="fa fa-info-circle"> Détails</i></a>
                                            <a href="{{ path('stock_edit', {'id': stock.id}) }}"><i class="fa fa-edit"> Modifier</i></a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4">Aucun produit en stock</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <tfoot>
                                <tr>
                                    <th>Produit</th>
                                    <th>Date d'ajout</th>
                                    <th>Quantité</th>
                                    <th>Actions</th>
                                </tr>
                                </tfoot>
                            </table>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div><!-- /.col -->
            </div><!-- /.row -->
            <a href="{{ path('stock_new') }}"><i class="fa fa-plus-circle">Ajouter un nouveau produit</i></a>
            <br>
            <a href="{{ path('stock_listp') }}"><i class="fa fa-print">Imprimer la liste des produits</i></a>
        </section><!-- /.content -->
    </div>
{% endblock %}
