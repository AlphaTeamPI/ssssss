{% extends 'base.html.twig' %}

{% block title %}<title>Alpha Fitness | DÃ©tails Utilisateur</title>{% endblock %}

{% block innerblock %}
    <div class="inner-block">
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <a href="{{ path('carte_index') }}">Retour</a>
                            <h1>Carte</h1>

                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Nom d'utilisateur</th>
                                    <td>{{ carte.username }}</td>
                                </tr>
                                <tr>
                                    <th>Type de carte</th>
                                    <td>{{ carte.typeofcard }}</td>
                                </tr>
                                <tr>
                                    <th>Date d'inscription</th>
                                    <td>{{ carte.dateincription ? carte.dateincription|date('Y-m-d') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Date d'expiration</th>
                                    <td>{{ carte.dateexpiration ? carte.dateexpiration|date('Y-m-d') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Image du carte</th>
                                    <td class="pic" ><img style="height: 200px; width: 200px;" src="/imagez/{{ carte.imagecard }}" alt></td>
                                </tr>
                                </tbody>
                            </table>


                            <a href="{{ path('carte_edit', {'idcard': carte.idcard}) }}">Modifier</a>

                            {{ include('carte/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
