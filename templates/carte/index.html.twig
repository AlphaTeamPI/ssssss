{% extends 'base.html.twig' %}

{% block title %}<title>Alpha Fitness | Cartes</title>{% endblock %}

{% block innerblock %}
    <div class="inner-block">
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h1>Tableau de la carte de l'utilisateur</h1>

                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Nom du carte</th>
                                    <th>Date d'inscription</th>
                                    <th>Date d'expiration</th>
                                    <th>Image du carte</th>
                                    <th>Nom d'utilisateur</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for carte in cartes %}
                                    <tr>
                                        <td>{{ carte.typeofcard }}</td>
                                        <td>{{ carte.dateincription ? carte.dateincription|date('Y-m-d') : '' }}</td>
                                        <td>{{ carte.dateexpiration ? carte.dateexpiration|date('Y-m-d') : '' }}</td>
                                        <td class="pic" ><img style="height: 200px; width: 200px;" src="/imagez/{{ carte.imagecard }}" alt></td>
                                        <td>{{ carte.username }}</td>
                                        <td>
                                            <a href="{{ path('carte_show', {'idcard': carte.idcard}) }}">Détails</a>
                                            <a href="{{ path('carte_edit', {'idcard': carte.idcard}) }}">Modifier</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="6">Aucune carte trouver</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div><!-- /.col -->
            </div><!-- /.row -->
            <a href="{{ path('carte_new') }}">Créer une nouvelle carte</a>
        </section><!-- /.content -->
    </div>
{% endblock %}
