{% extends 'base.html.twig' %}

{% block title %}<title>Alpha Fitness | Détails Produit</title>{% endblock %}

{% block innerblock %}
<div class="inner-block">

    <a href="{{ path('produit_index') }}"><i class="fa fa-arrow-circle-o-left">Retour</i></a>
    <h1>Produit : {{ produit.nom }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ produit.idcategorie.titre }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Image du produit</th>
                <td><img src="../images/{{ produit.imgproduit }}" height="250"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('produit_edit', {'id': produit.id}) }}"><i class="fa fa-edit">Modifier</i></a>

    {{ include('produit/_delete_form.html.twig') }}
</div>
{% endblock %}
