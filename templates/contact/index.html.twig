{% extends 'basef.html.twig' %}
{% block navdisactive %}{% endblock %}
{% block navcontact %}active{% endblock %}
{% block title %}
    <title>Alpha Fitness | Contact</title>
{% endblock %}
{% block produitsback %}
    <div class="w3l-index2">
        <div class="content">
            <div class="container">
                <nav id="breadcrumbs" class="breadcrumbs">
                    <div class="container page-wrapper text-center">
                        <div class="header-section">
                            <h2 class="mb-2">Contactez-nous</h2>
                        </div>
                        <a href="{{ path('dashboard_f') }}">Accueil</a> » <span class="breadcrumb_last" aria-current="page">Contacter</span>
                    </div>
                </nav>
            </div>
        </div>
    </div>
{% endblock %}
{% block produits %}
    <section class="w3l-contact" id="contact">
        <div class="contact-infubd py-5" >
            <div class="container py-lg-3" >
                <div class="contact-grids row">
                    <div class="col-lg-6 contact-left">
                        <div class="partners">
                            <div class="cont-details" >
                                <h5 style="color:var(--primary-color)">Nous contacter</h5>
                                <p class="mt-3 mb-4" >vous pouvez nous contacter avec se formulaire </p>
                            </div>
                            <div class="hours">
                                <h6 class="mt-4" style="color:var(--primary-color)">Email:</h6>
                                <p> <a>
                                        AlphaFitness@AlphaFitness.com</a></p>
                                <h6 class="mt-4" style="color:var(--primary-color)">Visitez nous:</h6>
                                <p> 78-80 Upper St Giles St. Norwich NR2 1LT United Kingdom.</p>
                                <h6 class="mt-4" style="color:var(--primary-color)">Contact:</h6>
                                <p class="margin-top" ><a href="tel:+44-255-366-88">+44-255-366-88</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                                <h2 style="color:var(--primary-color)">Envoyer un Email à l'administration ?</h2>

                                <br/>
                                {{ form_start(contactForm,{'attr': {'novalidate': 'novalidate'}})  }}
                                <div class="form-group" style="color:var(--primary-color)">


                                    {{ form_row(contactForm.nom,{'attr': {'class': 'nav-item @@about-active','placeholder': 'Nom'}}) }}
                                    {{ form_row(contactForm.email,{'attr': {'class': 'nav-item @@about-active'}}) }}
                                    {{ form_row(contactForm.message,{'attr': {'class': 'nav-item @@about-active'}}) }}


                                    <br/>
                                    <button class="btn btn-primary theme-button" >{{ button_label|default('Envoyer') }}</button>
                                    {{ form_end(contactForm)}}
                                    <br/>
                                    <a href="" type="submit" style="color:var(--primary-color)">Non, merci</a>

                                    <br/>
                                    <br/>
                                    <br/>
                                    <br/>
                                    <br/>
                                </div>
                    </div>

                </div>
            </div>
        </div>
    </section>










{% endblock %}


